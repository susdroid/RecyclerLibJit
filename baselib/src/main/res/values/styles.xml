<resources>

    <!-- Base application theme. -->

    <!--设置toolbar左边距-->
    <style name="MyToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="toolbarStyle">@style/mToolbarStyle</item>
    </style>

    <style name="mToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">15dp</item>
        <item name="contentInsetEnd">10dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <!--使自定义view可以贴左右的边，多数版本的系统不要下面两句也可以，但少量版本必须加下面的两句-->
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:paddingRight">13dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!--设置注册登录toolbar-->
    <style name="LoToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="toolbarNavigationButtonStyle">@style/LoToolbarNavigationButtonStyle</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="toolbarStyle">@style/mLoToolbarStyle</item>
    </style>

    <style name="mLoToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">30dp</item>
        <item name="contentInsetEnd">30dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <!--使自定义view可以贴左右的边，多数版本的系统不要下面两句也可以，但少量版本必须加下面的两句-->
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
    </style>

    <style name="LoToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:paddingRight">13dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!--通用对话框样式-->
    <style name="add_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowBackground">@color/trans_00</item>
        <!-- 自己想要的背景 -->
        <!--
        <item name="android:windowIsFloating">true</item>&lt;!&ndash; 是否浮现在activity之上 &ndash;&gt;
        <item name="android:windowIsTranslucent">false</item>&lt;!&ndash; 半透明 &ndash;&gt;
        <item name="android:windowNoTitle">true</item>&lt;!&ndash; 无标题 &ndash;&gt;
        <item name="android:backgroundDimEnabled">true</item>&lt;!&ndash; 模糊 &ndash;&gt;-->
    </style>

    <style name="update_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowBackground">@color/trans_00</item>
        <!-- 自己想要的背景 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--progressbar样式-->
    <style name="MyProgressbar_bg_update">
        <item name="android:maxHeight">3.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/progressbar_detail_bg_update</item>
        <item name="android:progressDrawable">@drawable/progressbar_detail_bg_update</item>
    </style>


    <!--控件类样式-->
    <style name="style_btn_common">
        <item name="android:layout_marginLeft">@dimen/margin_30</item>
        <item name="android:layout_marginRight">@dimen/margin_30</item>
        <item name="android:background">@drawable/btn_common_red</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/padding_13</item>
        <item name="android:paddingBottom">@dimen/padding_15</item>
        <item name="android:textSize">@dimen/text_size_17</item>
    </style>
    <!--editview-->
    <style name="style_clean_edit_text">
        <item name="android:background">@drawable/item_bg_white</item>
        <item name="android:drawableRight">@mipmap/ic_error</item>
        <item name="android:textColor">@color/text_gray_30</item>
        <item name="android:textColorHint">@color/text_gray_a9</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>

    <style name="style_edit_text">
        <item name="android:background">@drawable/item_bg_white</item>
        <item name="android:textColor">@color/text_gray_30</item>
        <item name="android:textColorHint">@color/text_gray_a9</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>
    <style name="style_eye_edit_text">
        <item name="android:background">@drawable/item_bg_white</item>
        <item name="android:drawableRight">@mipmap/ic_eyes_close_gray</item>
        <item name="android:textColor">@color/text_gray_30</item>
        <item name="android:textColorHint">@color/text_gray_a9</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>
</resources>
