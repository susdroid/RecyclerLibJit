<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="20.0dip" />

            <solid android:color="#EFEFEF" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="20.0dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#fd8662"
                    android:centerY="0.75"
                    android:endColor="#fd8662"
                    android:startColor="#fd8662" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="20.0dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="@color/bg_red_d8"
                    android:centerY="0.75"
                    android:endColor="@color/bg_red_d8"
                    android:startColor="@color/bg_red_d8" />
            </shape>
        </clip>
    </item>
</layer-list>