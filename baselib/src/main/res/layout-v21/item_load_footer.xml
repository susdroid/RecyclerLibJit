<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pull_to_load_footer_content"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_10"
    android:background="@color/main_bg_color">

    <ProgressBar
        android:id="@+id/pull_to_load_footer_progressbar"
        style="?android:progressBarStyle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:indeterminateTint="@color/tx_red_d8"
        android:indeterminateTintMode="src_atop"
        android:layout_toLeftOf="@+id/pull_to_load_footer_hint_textview"
        android:layout_marginRight="20dp"
        android:indeterminate="true" />

    <TextView
        android:id="@+id/pull_to_load_footer_hint_textview"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:text="正在加载更多数据"
        android:textColor="#999999"
        android:textSize="13sp" />

</RelativeLayout>

